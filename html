        const teamMembers = [
            { name: "Dr. Aarav Kumar", role: "CEO & Founder", image: "https://i.pravatar.cc/150?img=12" },
            { name: "Priya Sharma", role: "COO & Finance Expert", image: "https://i.pravatar.cc/150?img=5" },
            { name: "Rohan Patel", role: "CTO & Tech Lead", image: "https://i.pravatar.cc/150?img=33" },
            { name: "Neha Verma", role: "Head of Policy & Research", image: "https://i.pravatar.cc/150?img=9" },
            { name: "Arjun Singh", role: "Student Success Manager", image: "https://i.pravatar.cc/150?img=14" },
            { name: "Kavya Reddy", role: "Data & Analytics Lead", image: "https://i.pravatar.cc/150?img=10" }
        ];

        // State
        let currentPage = 'home';
        let filteredSchemes = [...schemes];
        let filteredPolicies = [...policies];

        // Navigation
        function navigateTo(page) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.getElementById(page).classList.add('active');
            
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('onclick').includes(page)) {
                    link.classList.add('active');
                }
            });

            currentPage = page;
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            if (window.innerWidth <= 768) {
                document.getElementById('navLinks').classList.remove('active');
            }

            if (page === 'schemes') renderSchemes();
            if (page === 'policies') renderPolicies();
            if (page === 'issues') renderIssues();
            if (page === 'vision') {
                renderTeam();
                animateCounters();
            }
        }

        function toggleMenu() {
            document.getElementById('navLinks').classList.toggle('active');
        }

        // Render Functions
        function renderSchemes() {
            const grid = document.getElementById('schemesGrid');
            grid.innerHTML = filteredSchemes.map(scheme => `
                <div class="dynamic-card" onclick="showSchemeDetail(${scheme.id})">
                    <div class="card-header">
                        <div>
                            ${scheme.government ? '<div class="govt-seal">' + scheme.seal + '</div>' : '<div class="badge">' + scheme.provider + '</div>'}
                            <h3 class="card-title">${scheme.name}</h3>
                            <div class="card-category">${scheme.category} | ${scheme.level || 'All Levels'}</div>
                        </div>
                    </div>
                    <p class="card-description">${scheme.description}</p>
                    <div style="padding: var(--space-12); background: var(--color-bg-1); border-radius: var(--radius-sm); margin: var(--space-12) 0;">
                        <strong style="color: var(--neon-cyan);">üí∞ ${scheme.monthlyAmount || 'Variable Amount'}</strong>
                    </div>
                    <ul class="card-benefits">
                        ${scheme.benefits.slice(0, 3).map(b => `<li>${b}</li>`).join('')}
                    </ul>
                    <button class="btn-secondary">View Details & Apply ‚Üí</button>
                </div>
            `).join('');
        }

        function renderPolicies() {
            const grid = document.getElementById('policiesGrid');
            grid.innerHTML = filteredPolicies.map(policy => `
                <div class="dynamic-card" onclick="showPolicyDetail(${policy.id})">
                    <div class="card-header">
                        <div>
                            <div class="badge">${policy.type}</div>
                            <h3 class="card-title">${policy.name}</h3>
                            <div class="card-category">${policy.issuer}</div>
                        </div>
                    </div>
                    <p class="card-description">${policy.description}</p>
                    <ul class="card-benefits">
                        ${policy.benefits.slice(0, 3).map(b => `<li>${b}</li>`).join('')}
                    </ul>
                    <button class="btn-secondary">Learn More</button>
                </div>
            `).join('');
        }

        function renderIssues() {
            const grid = document.getElementById('issuesGrid');
            grid.innerHTML = issues.map(issue => `
                <div class="issue-card" onclick="showIssueDetail(${issue.id})">
                    <div class="issue-category">${issue.category}</div>
                    <h3 class="card-title">${issue.title}</h3>
                    <p class="card-description">${issue.description}</p>
                    <ul class="tips-list">
                        ${issue.quickTips.slice(0, 2).map(tip => `<li>${tip}</li>`).join('')}
                    </ul>
                    <button class="btn-secondary">Get Solutions</button>
                </div>
            `).join('');
        }

        function renderTeam() {
            const grid = document.getElementById('teamGrid');
            grid.innerHTML = teamMembers.map(member => `
                <div class="team-member">
                    <img src="${member.image}" alt="${member.name}" class="team-photo">
                    <h4>${member.name}</h4>
                    <p>${member.role}</p>
                </div>
            `).join('');
        }

        // Filter Functions
        function filterSchemes() {
            const search = document.getElementById('schemeSearch').value.toLowerCase();
            const level = document.getElementById('schemeLevel').value;
            const category = document.getElementById('schemeCategory').value;
            const provider = document.getElementById('schemeProvider').value;

            filteredSchemes = schemes.filter(scheme => {
                const matchesSearch = scheme.name.toLowerCase().includes(search) || 
                                     scheme.description.toLowerCase().includes(search) ||
                                     scheme.eligibility.toLowerCase().includes(search);
                const matchesLevel = !level || (scheme.level && scheme.level.includes(level));
                const matchesCategory = !category || scheme.category === category;
                const matchesProvider = !provider || scheme.seal === provider || scheme.provider.includes(provider);
                return matchesSearch && matchesLevel && matchesCategory && matchesProvider;
            });

            renderSchemes();
            revealOnScroll();
        }

        function filterPolicies() {
            const search = document.getElementById('policySearch').value.toLowerCase();
            const type = document.getElementById('policyType').value;

            filteredPolicies = policies.filter(policy => {
                const matchesSearch = policy.name.toLowerCase().includes(search) || 
                                     policy.description.toLowerCase().includes(search);
                const matchesType = !type || policy.type === type;
                return matchesSearch && matchesType;
            });

            renderPolicies();
        }

        // Detail Functions
        function showSchemeDetail(id) {
            const scheme = schemes.find(s => s.id === id);
            const content = `
                <div style="display: flex; align-items: center; gap: var(--space-16); margin-bottom: var(--space-24);">
                    <h2 style="flex: 1; margin: 0;">${scheme.name}</h2>
                    ${scheme.government ? '<div class="govt-seal">' + scheme.seal + '</div>' : ''}
                </div>
                <div style="background: var(--color-bg-1); padding: var(--space-16); border-radius: var(--radius-base); margin-bottom: var(--space-24); border-left: 4px solid var(--neon-cyan);">
                    <strong style="color: var(--neon-cyan); font-size: var(--font-size-xl);">üí∞ ${scheme.monthlyAmount || 'Financial Support'}</strong>
                    <p style="margin: var(--space-8) 0 0 0; color: var(--color-text-secondary);">Provider: ${scheme.provider}</p>
                    <p style="margin: var(--space-4) 0 0 0; color: var(--color-text-secondary);">Level: ${scheme.level || 'All Levels'}</p>
                    ${scheme.lastDate ? `<p style="margin: var(--space-4) 0 0 0; color: var(--color-warning);">Last Date: ${scheme.lastDate}</p>` : ''}
                </div>
                <div class="modal-section">
                    <h3>üìù Description</h3>
                    <p>${scheme.description}</p>
                </div>
                <div class="modal-section">
                    <h3>‚úÖ Eligibility Criteria</h3>
                    <p>${scheme.eligibility}</p>
                </div>
                <div class="modal-section">
                    <h3>üéÅ Benefits</h3>
                    <ul>
                        ${scheme.benefits.map(b => `<li>${b}</li>`).join('')}
                    </ul>
                </div>
                <div class="modal-section">
                    <h3>üìÑ Documents Required</h3>
                    <ul>
                        ${scheme.documents.map(d => `<li>${d}</li>`).join('')}
                    </ul>
                </div>
                <div class="modal-section">
                    <h3>üîÑ Application Process</h3>
                    ${scheme.applicationProcess ? `
                        <ol style="padding-left: var(--space-24); color: var(--color-text-secondary);">
                            ${scheme.applicationProcess.map((step, i) => `<li style="margin: var(--space-8) 0;">${step}</li>`).join('')}
                        </ol>
                    ` : `<p>${scheme.applicationType}</p>`}
                </div>
                <div style="background: var(--color-bg-8); padding: var(--space-20); border-radius: var(--radius-base); margin-top: var(--space-24); text-align: center; border: 2px solid var(--neon-cyan);">
                    <h3 style="color: var(--neon-cyan); margin-bottom: var(--space-16);">üèõÔ∏è Apply on National Scholarship Portal</h3>
                    <p style="color: var(--color-text-secondary); margin-bottom: var(--space-16);">This is a Government of India verified scheme. Apply directly through NSP.</p>
                    <a href="${scheme.applicationLink}" target="_blank" class="btn-primary" style="display: inline-block; text-decoration: none; margin-right: var(--space-12);">Go to NSP Portal ‚Üí</a>
                    ${scheme.notificationLink ? `<a href="${scheme.notificationLink}" target="_blank" class="btn-secondary" style="display: inline-block; text-decoration: none;">Official Notification</a>` : ''}
                </div>
            `;
            document.getElementById('modalContent').innerHTML = content;
            openModal('detailModal');
        }

        function showPolicyDetail(id) {
            const policy = policies.find(p => p.id === id);
            const content = `
                <h2>${policy.name}</h2>
                <div class="badge" style="margin-bottom: 16px;">${policy.issuer}</div>
                <div class="modal-section">
                    <h3>Description</h3>
                    <p>${policy.description}</p>
                </div>
                <div class="modal-section">
                    <h3>Coverage</h3>
                    <p>${policy.coverage}</p>
                </div>
                <div class="modal-section">
                    <h3>Benefits</h3>
                    <ul>
                        ${policy.benefits.map(b => `<li>${b}</li>`).join('')}
                    </ul>
                </div>
                <div class="modal-section">
                    <h3>Eligibility</h3>
                    <p>${policy.eligibility}</p>
                </div>
                <div class="modal-section">
                    <h3>How to Apply</h3>
                    <p>${policy.applicationType}</p>
                    <p><strong>Documents:</strong> ${policy.documentationRequired}</p>
                </div>
            `;
            document.getElementById('modalContent').innerHTML = content;
            openModal('detailModal');
        }

        function showIssueDetail(id) {
            const issue = issues.find(i => i.id === id);
            const relatedSchemesList = issue.relatedSchemes.map(sid => schemes.find(s => s.id === sid).name);
            const content = `
                <h2>${issue.title}</h2>
                <div class="issue-category" style="margin-bottom: 16px;">${issue.category}</div>
                <div class="modal-section">
                    <h3>Problem</h3>
                    <p>${issue.description}</p>
                </div>
                <div class="modal-section">
                    <h3>Quick Tips</h3>
                    <ul>
                        ${issue.quickTips.map(tip => `<li>${tip}</li>`).join('')}
                    </ul>
                </div>
                <div class="modal-section">
                    <h3>Recommended Solutions</h3>
                    <ul>
                        ${issue.solutions.map(s => `<li>${s}</li>`).join('')}
                    </ul>
                </div>
                <div class="modal-section">
                    <h3>Related Schemes</h3>
                    <ul>
                        ${relatedSchemesList.map(s => `<li>${s}</li>`).join('')}
                    </ul>
                </div>
            `;
            document.getElementById('modalContent').innerHTML = content;
            openModal('detailModal');
        }

        // Modal Functions
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function switchTab(tab) {
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
            
            if (tab === 'login') {
                document.querySelectorAll('.tab-button')[0].classList.add('active');
                document.getElementById('loginTab').classList.add('active');
            } else {
                document.querySelectorAll('.tab-button')[1].classList.add('active');
                document.getElementById('signupTab').classList.add('active');
            }
        }

        // Form Handlers
        function handleLogin(e) {
            e.preventDefault();
            showToast('Login successful! Welcome back.');
            closeModal('loginModal');
        }

        function handleSignup(e) {
            e.preventDefault();
            showToast('Account created successfully! Welcome to YojnaMitra.');
            closeModal('loginModal');
        }

        function handleGoogleLogin() {
            showToast('Google login initiated...');
        }

        function handleContactSubmit(e) {
            e.preventDefault();
            showToast('Message sent successfully! We\'ll get back to you soon.');
            e.target.reset();
        }

        // Toast Notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Animate Counters
        function animateCounters() {
            const counters = document.querySelectorAll('.stat-number[data-target], .impact-number[data-target]');
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                if (!target) return;
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;
                
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        counter.textContent = target.toLocaleString();
                        clearInterval(timer);
                    } else {
                        counter.textContent = Math.floor(current).toLocaleString();
                    }
                }, 16);
            });
        }

        // Smooth scroll animations for cards
        function revealOnScroll() {
            const cards = document.querySelectorAll('.cards-grid > *');
            const windowHeight = window.innerHeight;
            cards.forEach(card => {
                const rect = card.getBoundingClientRect();
                if (rect.top < windowHeight - 50) {
                    card.style.opacity = '1';
                    card.style.transform = 'none';
                } else {
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(50px)';
                }
            });
        }
        window.addEventListener('scroll', revealOnScroll);
        window.addEventListener('DOMContentLoaded', revealOnScroll);

        // Touch/Pointer support for cursor on mobile
        if (window.matchMedia('(pointer: coarse)').matches) {
            cursor.style.display = 'none';
            trail.style.display = 'none';
        }

        // Additional counter animation for impact stats
        function animateImpactCounters() {
            const counters = document.querySelectorAll('.impact-number[data-target]');
            counters.forEach(counter => {
                const target = parseInt(counter.getAttribute('data-target'));
                if (!target) return;
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;
                
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        counter.textContent = target.toLocaleString();
                        clearInterval(timer);
                    } else {
                        counter.textContent = Math.floor(current).toLocaleString();
                    }
                }, 16);
            });
        }
        animateImpactCounters();

        // Navbar Scroll Effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Close modal on outside click
        document.querySelectorAll('.modal-overlay').forEach(overlay => {
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) {
                    closeModal(overlay.id);
                }
            });
        });

        // Initialize
        window.addEventListener('DOMContentLoaded', () => {
            renderSchemes();
            renderPolicies();
            renderIssues();
            animateCounters();
            
            // Add ripple effect to buttons
            document.querySelectorAll('.btn-primary, .btn-secondary, .btn-login').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    ripple.style.position = 'absolute';
                    ripple.style.borderRadius = '50%';
                    ripple.style.background = 'rgba(255, 255, 255, 0.5)';
                    ripple.style.width = ripple.style.height = '100px';
                    ripple.style.left = e.clientX - this.getBoundingClientRect().left - 50 + 'px';
                    ripple.style.top = e.clientY - this.getBoundingClientRect().top - 50 + 'px';
                    ripple.style.animation = 'ripple 0.6s ease-out';
                    ripple.style.pointerEvents = 'none';
                    this.appendChild(ripple);
                    setTimeout(() => ripple.remove(), 600);
                });
            });
        });
        
        // Ripple animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes ripple {
                to {
                    transform: scale(4);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
